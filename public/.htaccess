<IfModule mod_rewrite.c>
    RewriteEngine On

    # ðŸš¨ Force toutes les requÃªtes OPTIONS Ã  passer par Symfony
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ index.php [QSA,L]

    # Support pour les headers Authorization
    RewriteCond %{HTTP:Authorization} .+
    RewriteRule ^ - [E=HTTP_AUTHORIZATION:%0]

    # Redirection nette vers index.php si nÃ©cessaire
    RewriteCond %{ENV:REDIRECT_STATUS} =""
    RewriteRule ^index\.php(?:/(.*)|$) %{ENV:BASE}/$1 [R=308,L]

    # Route tout ce qui nâ€™est pas un fichier existant vers index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ %{ENV:BASE}/index.php [L]
</IfModule>
